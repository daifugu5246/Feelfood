@page
@model IndexModel
@{
    ViewData["Title"] = "Profile Edit";
}

<head>
    <link rel="stylesheet" href="index.cshtml.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kanit">
</head>

<body style="background-color:#f8f3e3">
    <header>
        <div class=" container-fluid " id="Header">
            <div class="row">
                <div class="col-3">
                    <a href="/Home/Index"><img id="nav-img" src="~/images/logo-navbar2.png" alt="yTOkgn.png" /></a>
                </div>
                <div class="col-9">
                    <a href="/Home/Index">UserProfile</a>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="page">
        <div class="left">
            <div class="container">
                <div class="TXT1">Manage Your Account</div>

                <div class="tab">
                    <button class="tablinks"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></button>
                    <button class="tablinks"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password Change</a></button>
                </div>

            </div>

        </div>
        <div class="right">
            <div class="container">
                <div class="TXT1"><p>Edit Profile</p></div>
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating col-12">
                        <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div id="firstNameandLast">
                        <div class="form-floating" id="firstNameForm">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name." />
                            <label asp-for="Input.FirstName">Firstname</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating" id="lastNameForm">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name." />
                            <label asp-for="Input.LastName">Lastname</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-floating col-12">
                        <input asp-for="Input.Email" class="form-control" placeholder="Please enter your phone number." />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-12">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>

</body>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
