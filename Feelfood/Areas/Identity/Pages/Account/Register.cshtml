@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "AuthLayout";
}

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kanit">
    <link rel="stylesheet" href="Register.cshtml.css" />
</head>

<body style="background-image:linear-gradient(#ffe6b8 10%, #f8e3e3 100%); height:765px;">
    <div class="page">
        <div class="box-form">
            <div class="left">
                <div class="overlay">
                    <img id="logo1" src="~/images/register(1).png" />
                    <img id="logo2" src="~/images/register(2).png" />
                </div>
            </div>

            <div class="right">
                <div class="formArea">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="formBox">
                            <div class="box">
                                <div id="firstName" class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="name"/>
                                    <label asp-for="Input.FirstName">Firstname</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div id="lastName" class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="lastname"/>
                                    <label asp-for="Input.LastName">Lastname</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="username"/>
                                    <label asp-for="Input.UserName">Username</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email"/>
                                    <label asp-for="Input.Email">Email</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                                    <label asp-for="Input.Password">Password</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="telephone number" />
                                    <label asp-for="Input.PhoneNumber">Phone number</label>
                                    <span style="float:left; font-size:1.5vmin;" asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div id="pressButton" class="d-flex">
                                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                                <a id="backToLogin" style=" padding: 10px; float:right; width:fit-content;  box-shadow: 0px 4px 20px 0px #F4C000a6; background-image: linear-gradient(135deg, #383838 10%, #242121 100%); font-size: 15px; border-radius: 50px; display: inline-block; border: 0; outline: 0;" id="register" class="btn btn-primary" asp-page="./Login">Back to Login</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}