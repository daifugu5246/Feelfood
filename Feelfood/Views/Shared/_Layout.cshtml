<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Feelfood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Feelfood.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <h1 class="navbar-brand">Feelfood</h1>
                <div>
                    <ul>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="columns">
            <div class="column1">
                <img class="contact-icon" src="~/images/fb-icon.png" />
                <img class="contact-icon" src="~/images/ig-icon.png" />
                <img class="contact-icon" src="~/images/line-icon.png" />
            </div>
            <div class="column2">
                <p>ce kmitl all rights reserved & copyright 2023</p>
            </div>
            <div class="column3">
                <a>Terms of Service</a>
            </div>
            <div class="column3">
                <a>Privacy Policy</a>
            </div>
        </div>
    </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
